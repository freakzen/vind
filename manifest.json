{
  "manifest_version": 3,
  "name": "Vind",
  "version": "1.0",
  "description": "Edit text on web pages",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vind Text Editor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}